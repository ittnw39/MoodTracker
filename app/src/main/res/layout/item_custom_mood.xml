<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <View
        android:id="@+id/viewMoodColor"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tvMoodName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:text="사용자 감정 이름" />

    <ImageView
        android:id="@+id/ivEditMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_edit" 
        android:contentDescription="감정 수정"
        android:padding="8dp"
        android:visibility="gone" /> <!-- 기능 구현 전까지 숨김 -->

    <ImageView
        android:id="@+id/ivDeleteMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete" 
        android:contentDescription="감정 삭제"
        android:padding="8dp"
        android:visibility="gone" /> <!-- 기능 구현 전까지 숨김 -->

</LinearLayout> 